{
  "files.exclude": {
    ".cache": true,
    ".idea": true,
    ".mypy_cache": true,
    ".python-version": true,
    ".scannerwork": true,
    ".sonarlint": true,
    ".vagrant": true,
    ".vscode": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.coverage": true,
    "**/.DS_Store": true,
    "**/.idea": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.sonarlint": true,
    "**/.tox": true,
    "**/.venv": true,
    "**/*.egg-info": true,
    "**/*.py[co]": true,
    "**/*.retry": true,
    "**/coverage*": true,
    "**/dist": true,
    "**/htmlcov": true,
    "**/node_modules": true,
    "**/pip-wheel-metadata": true,
    "**/venv": true
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },

  "editor.rulers": [120],

  "python.linting.enabled": true,

  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/flake8",
  "python.linting.flake8Args": ["--max-line-length", "120"],

  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",

  "python.formatting.provider": "black",
  "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
  "python.formatting.blackArgs": ["--line-length", "120"],

  "python.testing.pytestEnabled": true,
  "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
  "python.testing.pytestArgs": ["-v", "tests"],

  "python.envFile": "${workspaceFolder}/.env",
  "python.pythonPath": "${workspaceFolder}/.venv/bin/python3",

  "python.analysis.extraPaths": [
    "${workspaceFolder}",
    "${workspaceFolder}/.venv/lib/python3.10",
    "${workspaceFolder}/.venv/lib/python3.10/site-packages"
  ],

  "python.autoComplete.extraPaths": [
    "${workspaceFolder}",
    "${workspaceFolder}/.venv/lib/python3.10",
    "${workspaceFolder}/.venv/lib/python3.10/site-packages"
  ],

  "python.sortImports.args": [
    "--settings-path", "${workspaceFolder}",
  ],

  "[python]": {
      "editor.formatOnSave": true
  }
}
